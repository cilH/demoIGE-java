<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>demoIGE</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>EmployeServlet</servlet-name>
  	<servlet-class>com.demoIGE.controller.EmployeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeServlet</servlet-name>
  	<url-pattern>/employe</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>FormulaireServlet</servlet-name>
  	<servlet-class>com.demoIGE.controller.FormulaireServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FormulaireServlet</servlet-name>
  	<url-pattern>/employe/formulaire</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>SuppressionServlet</servlet-name>
  	<servlet-class>com.demoIGE.controller.SuppressionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SuppressionServlet</servlet-name>
  	<url-pattern>/employe/suppression</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>AjoutServlet</servlet-name>
  	<servlet-class>com.demoIGE.controller.AjoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AjoutServlet</servlet-name>
  	<url-pattern>/employe/ajout</url-pattern>
  </servlet-mapping>
</web-app>